<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_drag_hovered="true" >
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="6dp" />
            <stroke  android:width="3dip"
                android:color="@color/boton_green"/>
        </shape>
    </item>

    <item>
        <shape android:layout_height="match_parent" android:shape="rectangle">
            <solid android:color="@color/boton_green" />
            <corners android:radius="14dp" />
            <stroke android:width="3dip" android:color="@android:color/white" />
        </shape>
    </item>

</selector>